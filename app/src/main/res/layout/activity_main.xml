<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        tools:context=".MainActivity">

    <ImageView android:layout_width="117dp"
               android:src="@drawable/logo"
               android:layout_height="108dp"
               android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501"
               app:layout_constraintVertical_bias="0.733" android:contentDescription="@string/todo"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="@string/hambre_app"
            android:textSize="30sp"
            android:textColor="@color/blanco"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_inciar"/>
    <Button android:layout_width="wrap_content"
            android:text="@string/inicial_plan"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_height="57dp"
            android:background="@drawable/boton_iniciar"
            android:textColor="@color/blanco"
            android:layout_marginBottom="232dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:id="@+id/btn_inciar"/>

</android.support.constraint.ConstraintLayout>