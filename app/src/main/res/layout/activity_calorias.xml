<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        android:gravity="center|top"
        tools:context=".calorias">
    <TextView android:layout_width="300dp"
              android:text="Calcula tu consumo preferente de calorias"
              android:textSize="30dp"
              android:textColor="@color/blanco"
              android:layout_marginTop="35dp"
              android:layout_height="wrap_content"/>

    <RadioGroup android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="40dp"
                android:layout_height="wrap_content">
        <RadioButton android:layout_width="wrap_content"
                     android:text="Mujer"
                     android:textColor="@color/blanco"
                     android:textSize="18dp"
                     android:checked="true"
                     android:id="@+id/rb_mujeres"
                     android:layout_height="wrap_content"/>
        <RadioButton android:layout_width="wrap_content"
                     android:text="Hombre"
                     android:layout_marginLeft="50dp"
                     android:textSize="18dp"
                     android:checked="false"
                     android:textColor="@color/blanco"
                     android:id="@+id/rb_hombres"
                     android:layout_height="wrap_content"/>
    </RadioGroup>
    <EditText android:layout_width="300dp"
              android:layout_marginTop="20dp"
              android:hint="Peso en [Kg]"
              android:paddingLeft="20dp"
              android:background="@drawable/tv_peso"
              android:inputType="numberDecimal"
              android:id="@+id/et_pesoCal"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="300dp"
              android:layout_marginTop="20dp"
              android:hint="Estatura en [cm]"
              android:paddingLeft="20dp"
              android:background="@drawable/tv_peso"
              android:inputType="numberDecimal"
              android:id="@+id/et_estaturaCal"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="300dp"
              android:layout_marginTop="20dp"
              android:hint="Edad"
              android:paddingLeft="20dp"
              android:background="@drawable/tv_peso"
              android:inputType="number"
              android:id="@+id/et_edadCal"
              android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:text="Calcular"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:textSize="23dp"
            android:textColor="@color/blanco"
            android:id="@+id/btn_calCalorias"
            android:background="@drawable/boton_calcular"
            android:layout_height="wrap_content"/>
    <TextView android:layout_width="150dp"
              android:textSize="23dp"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="@color/blanco"
              android:layout_marginTop="8dp"
              android:id="@+id/tv_etiquetaCal"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textSize="23dp"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="@color/blanco"
              android:layout_marginTop="8dp"
              android:id="@+id/tv_ResultadoCal"
              android:layout_height="wrap_content"/>

</LinearLayout>