<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        android:gravity="center|top"
        tools:context=".imc">
    <TextView android:layout_width="wrap_content"
              android:text="Calcula tu IMC"
              android:textColor="@color/blanco"
              android:textSize="35dp"
              android:layout_marginTop="60dp"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="wrap_content"
              android:hint="Peso en [Kg]"
              android:textSize="20dp"
              android:paddingLeft="20dp"
              android:layout_marginTop="40dp"
              android:background="@drawable/tv_peso"
              android:inputType="numberDecimal"
              android:id="@+id/et_pesoIMC"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="wrap_content"
              android:hint="Estatura en [m]"
              android:textSize="20dp"
              android:paddingLeft="20dp"
              android:background="@drawable/tv_peso"
              android:layout_marginTop="40dp"
              android:inputType="numberDecimal"
              android:id="@+id/et_estaturaIMC"
              android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Calcular"
            android:textSize="23dp"
            android:textColor="@color/blanco"
            android:textAllCaps="false"
            android:background="@drawable/boton_calcular"
            android:id="@+id/btn_calcularIMC"
            android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textStyle="bold"
              android:textSize="25dp"
              android:layout_marginTop="20dp"
              android:id="@+id/tv_etiquetaIMC"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:textStyle="bold"
              android:textSize="25dp"
              android:layout_marginTop="5dp"
              android:id="@+id/tv_resultadoIMC"
              android:layout_height="wrap_content"/>
</LinearLayout>